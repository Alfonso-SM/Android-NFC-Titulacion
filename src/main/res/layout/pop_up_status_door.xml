<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/NotificationSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundPopUp"
        android:fontFamily="@font/goblin_one"
        android:gravity="center"
        android:text="Se mando la solicitud al coche de"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/LettersPopUp"
        android:textSize="45sp" />

    <TextView
        android:id="@+id/OfWhat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundPopUp"
        android:fontFamily="@font/goblin_one"
        android:gravity="center"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/LettersPopUp"
        android:textSize="50sp"
        app:layout_constraintTop_toBottomOf="@+id/NotificationSend" />


</androidx.constraintlayout.widget.ConstraintLayout>